<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>

    <!-- servlets -->
    <servlet>
        <servlet-name>ValidatorServlet</servlet-name>
        <servlet-class>com.netcracker.adlitsov.servlets.ValidatorServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>RegistratorServlet</servlet-name>
        <servlet-class>com.netcracker.adlitsov.servlets.RegistratorServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>PassChangerServlet</servlet-name>
        <servlet-class>com.netcracker.adlitsov.servlets.PassChangerServlet</servlet-class>
    </servlet>

    <!-- servlet mappings-->
    <servlet-mapping>
        <servlet-name>ValidatorServlet</servlet-name>
        <url-pattern>/ValidatorServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>RegistratorServlet</servlet-name>
        <url-pattern>/RegistratorServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>PassChangerServlet</servlet-name>
        <url-pattern>/PassChangerServlet</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>login.html</welcome-file>
    </welcome-file-list>
</web-app>
